#!/usr/bin/bash

# ags
ags &

# variables
config=$HOME/.config/hypr
scripts=$config/scripts

# idle manager
swayidle -C $scripts/swayidle &

# initial keyboard layout for dunst to display
echo "English" > ~/.config/hypr/store/current_xkblayout.txt &
notify-send "Keyboard Layout" English &

# wallpaper
$scripts/wall $config/wallpapers/space.jpg &

# clipboard
[ -x "$(command -v wl-paste)" ] && [ -x "$(command -v cliphist)" ] && wl-paste --watch cliphist store &
[ -x "$(command -v wl-paste)" ] && [ -x "$(command -v cliphist)" ] && wl-paste --watch pkill -RTMIN+9 waybar &

# polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
