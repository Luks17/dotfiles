#!/usr/bin/bash

# variables
config=$HOME/.config/hypr
scripts=$config/scripts

# notification daemon
dunst &

# idle manager
swayidle -C $scripts/swayidle &

# waybar
$scripts/launch_waybar &
$scripts/tools/dynamic &

# starting layout for dunstify
echo "English" > ~/.config/hypr/store/current_xkblayout.txt
dunstify --appname="Keyboard Layout" English

# wallpaper
$scripts/wall $config/wallpapers/train.jpg &

# clipboard
[ -x "$(command -v wl-paste)" ] && [ -x "$(command -v cliphist)" ] && wl-paste --watch cliphist store
[ -x "$(command -v wl-paste)" ] && [ -x "$(command -v cliphist)" ] && wl-paste --watch pkill -RTMIN+9 waybar

# effects
$scripts/rgb &

# other
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP &
